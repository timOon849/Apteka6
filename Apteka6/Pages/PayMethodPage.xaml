<Page x:Class="Apteka6.Pages.PayMethodPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"

      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Apteka6.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="PayMethodPage">

    <Grid>
        <ComboBox x:Name="PaymentMethodsComboBox" 
                  DisplayMemberPath="Name" 
                  SelectedValuePath="PaymentMethodId" 
                  Background="Black"
                  Width="400" Height="100" 
                  SelectionChanged="PaymentMethodsComboBox_SelectionChanged" Margin="710,0,710,0"/>
        <ui:Button Content="Подтвердить" Background="Black" HorizontalAlignment="Center" Margin="0,595,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
